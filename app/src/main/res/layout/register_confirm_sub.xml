<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">


        <ImageView
            android:id="@+id/top_btn_back_confirm"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/ic_arrow_back_black_24dp" />

        <TextView
            android:id="@+id/text_pagename_register_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="상품 등록 확인"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/top_btn_home"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/ic_home_black_24dp" />

    </LinearLayout>

    <!--편집 시작-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical">


        <!--카테고리 시작-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:weightSum="7">

                <Button
                    android:id="@+id/btn_category_confirm"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="2"
                    android:text="카테고리" />

                <TextView
                    android:id="@+id/txt_category_confirm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:ems="10"
                    android:hint="카테고리를 선택하세요."
                    android:inputType="textPersonName"
                    android:textSize="15dp" />

            </LinearLayout>
        </LinearLayout>
        <!--카테고리 끝-->

        <!--상품이미지시작-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal"
            android:weightSum="7">

            <Button
                android:id="@+id/btn_image_upload_confirm"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:text="이미지등록" />

            <TextView
                android:id="@+id/txt_imagepath_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="15dp" />
        </LinearLayout>

        <!--상품이미지 끝-->

        <!--이미지 표시-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginHorizontal="20dp"
            android:weightSum="7">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5">

                <ImageView
                    android:id="@+id/imagearea_confirm"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:layout_margin="10dp"/>
            </LinearLayout>
        </LinearLayout>
        <!--이미지표시 끝-->

        <!--물품명 시작-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal"
            android:weightSum="7">

            <TextView
                android:id="@+id/txt_goodsname_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:text="상품명"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_goodsname_edit_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="5"
                android:ems="10"
                android:inputType="textPersonName"
                android:text=""
                android:textSize="20dp" />
        </LinearLayout>
        <!--물품명 끝-->

        <!--설명 시작-->
        <!--설명 시작-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="7">

                <TextView
                    android:id="@+id/txt_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="2"
                    android:text="설   명"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtbox_description_edit_confirm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="5"
                    android:gravity="top"
                    android:hint="대여해드립니다."
                    android:inputType="textMultiLine"
                    android:padding="10dp"
                    android:textSize="15dp" />
            </LinearLayout>


        </LinearLayout>


        <!--설명 끝-->


        <!--상품 가격-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal"
            android:weightSum="7">

            <TextView
                android:id="@+id/txt_rentfee_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:text="대여료"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_rentfee_edit_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="4"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingRight="10dp"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txt_rentfee_unit_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="right"
                android:inputType="textPersonName"
                android:paddingRight="10dp"
                android:text="원"
                android:textSize="20dp" />

        </LinearLayout>
        <!--상품가격 끝-->

        <!--사용기한 기준-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal"
            android:weightSum="7">


            <TextView
                android:id="@+id/txt_period_register_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:text="대여 기준"
                android:textSize="16dp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/txt_period_confirm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:ems="10"
                    android:hint=""
                    android:inputType="textPersonName"
                    android:textSize="15dp" />

            </LinearLayout>
        </LinearLayout>
        <!--사용기한 끝-->

        <!--보증금 가격-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal"
            android:weightSum="7">

            <TextView
                android:id="@+id/txt_deposit_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:text="보증금"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_deposit_edit_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="4"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingRight="10dp"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txt_deposit_unit_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="right"
                android:inputType="textPersonName"
                android:paddingRight="10dp"
                android:text="원"
                android:textSize="20dp" />
        </LinearLayout>
        <!--상품가격 끝-->
        <!--지역 시작-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal"
            android:weightSum="7">

            <TextView
                android:id="@+id/txt_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:text="위치"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_location_edit_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="5"
                android:ems="10"
                android:inputType="textPersonName"
                android:text=""
                android:textSize="20dp" />
        </LinearLayout>
        <!--물품명 끝-->

    </LinearLayout>
    <!--편집 끝-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2">


        <Button
            android:id="@+id/btn_cancel_register_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:text="취소" />

        <Button
            android:id="@+id/btn_ok_register_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:text="등록" />
    </LinearLayout>


</LinearLayout>


