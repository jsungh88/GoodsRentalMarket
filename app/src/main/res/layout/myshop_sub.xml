<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyShopActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">


            <!--<ImageView-->
                <!--android:id="@+id/myshop_btn_back"-->
                <!--android:layout_width="60dp"-->
                <!--android:layout_height="60dp"-->
                <!--app:srcCompat="@drawable/ic_arrow_back_black_24dp" />-->

            <TextView
                android:id="@+id/myshop_pagename_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="MY SHOP"
                android:textSize="20dp" />

            <!--<ImageView-->
                <!--android:id="@+id/myshop_top_btn_home"-->
                <!--android:layout_width="60dp"-->
                <!--android:layout_height="60dp"/>-->
                <!--app:srcCompat="@drawable/ic_home_black_24dp" />-->

        </LinearLayout>
    </LinearLayout>

    <!--편집 시작-->
    <LinearLayout
        android:id="@+id/btn_area"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:padding="5dp"
        >
        <Button
            android:id="@+id/myshop_selectall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:text="전체 선택"
            android:background="@color/colorGray"
            />
        <Button
            android:id="@+id/myshop_add"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:text="상품 등록"
            android:background="@color/colorGray"
            />

        <Button
            android:id="@+id/myshop_modify"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:text="상품 수정"
            android:background="@color/colorGray"/>

        <Button
            android:id="@+id/myshop_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="상품 삭제"
            android:background="@color/colorGray"/>

    </LinearLayout>

    <ListView
        android:id="@+id/myshopList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="12dp"
        android:choiceMode="multipleChoice"
        />

</LinearLayout>