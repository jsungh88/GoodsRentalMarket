<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--상품02 시작-->
    <LinearLayout
        android:id="@+id/goods01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/border"
        android:padding="10dp">

        //상품이미지

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img_goods01"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/ic_launcher_background"
                        tools:ignore="VectorDrawableCompat" />

                    <!--<ImageView-->
                        <!--android:id="@+id/img_favorite01"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_alignParentLeft="true"-->
                        <!--android:layout_alignParentStart="true"-->
                        <!--android:layout_alignParentTop="true"-->
                        <!--android:layout_marginBottom="10dp"-->
                        <!--android:layout_marginLeft="10dp"-->
                        <!--android:layout_marginTop="10dp"-->
                        <!--app:srcCompat="@drawable/ic_favorite_black_24dp" />-->

                    <!--<TextView-->
                        <!--android:id="@+id/txt_favoritecount"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginLeft="2dp"-->
                        <!--android:gravity="center_vertical"-->
                        <!--android:text="" />-->


                </RelativeLayout>

            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                //상품명

                <TextView
                    android:id="@+id/goods_name01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="8dp"
                    android:gravity="center_vertical"
                    android:text="상품명01"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:singleLine="true"/>

                <!--<ImageView-->
                <!--android:id="@+id/icon_grade01"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignBottom="@+id/goods_name01"-->
                <!--android:layout_alignTop="@+id/goods_name01"-->
                <!--android:layout_toLeftOf="@+id/txt_writer01"-->
                <!--android:layout_toStartOf="@+id/txt_writer01"-->
                <!--android:adjustViewBounds="true"-->
                <!--app:srcCompat="@drawable/ic_class_black_24dp" />-->

                <!--<TextView-->
                <!--android:id="@+id/txt_writer01"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignBottom="@+id/goods_name01"-->
                <!--android:layout_alignParentEnd="true"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_alignTop="@+id/icon_grade01"-->
                <!--android:layout_marginRight="10dp"-->
                <!--android:gravity="center_vertical"-->
                <!--android:text="작성자명" />-->


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal">

                //대여료

                <TextView
                    android:id="@+id/goods_rentfee_key01"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="fill_vertical"
                    android:text="대여료:"
                    android:textColor="@color/colorAccent"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                //대여료 값

                <TextView
                    android:id="@+id/goods_rentfee_value01"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:gravity="fill_vertical"
                    android:text="5,000"
                    android:textColor="@color/colorAccent"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/goods_rentfee_unit01"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:gravity="fill_vertical"
                    android:text="원"
                    android:textColor="@color/colorAccent"
                    android:textSize="15dp"
                    android:textStyle="bold" />
                //대여료 값

                <TextView
                    android:id="@+id/goods_rentfee_standard01"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:gravity="fill_vertical"
                    android:text="[1일기준]"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:orientation="horizontal">

                //보증금

                <TextView
                    android:id="@+id/goods_deposit_key01"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="top"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="fill_vertical"
                    android:text="보증금:"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                //보증금 값

                <TextView
                    android:id="@+id/goods_deposit_value01"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="top"
                    android:layout_marginRight="10dp"
                    android:gravity="fill_vertical"
                    android:text="10,000"
                    android:textSize="15dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/goods_deposit_unit01"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="top"
                    android:layout_marginRight="10dp"
                    android:gravity="fill_vertical"
                    android:text="원"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="3dp">

                //지역

                <ImageView
                    android:id="@+id/img_loc01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6dp"
                    app:srcCompat="@drawable/ic_location_on_black_24dp" />

                <TextView
                    android:id="@+id/txt_loc01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/img_loc01"
                    android:layout_toRightOf="@+id/img_loc01"
                    android:text="마포구 성산동" />


                //대여상태

                <TextView
                    android:id="@+id/goods_state01"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@color/colorAccent"
                    android:gravity="right"
                    android:padding="3dp"
                    android:text="대여가능"
                    android:textColor="#ffffff"
                    android:textSize="10dp"
                    android:textStyle="bold" />

                />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>